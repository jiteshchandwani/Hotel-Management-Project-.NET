@model chesterfields.Models.ReservationSummary
@{
    ViewBag.Title = "MyReservation";
}
@if (Session["UserName"] == null)
{
    <script>
        window.onload = function () {
            {
                window.location.href = "@Url.Action("index","Chesterfields")";
            }
        }
    </script>
}
<style>
    #popupboxtq {
        margin: 40%;
        margin-left: 30%;
        margin-top: 50px;
        padding-top: 10px;
        width: 40%;
        height: 200px;
        position: absolute;
        background: rgba(0,0,0,.9);
        border: solid #000000 2px;
        z-index: 5000;
        font-family: arial;
        visibility: hidden;
        border-radius: 25px;
        color: white;
    }
</style>
<script>

window.onload = function showtq() {
        document.getElementById('popupboxtq').style.visibility = "@ViewBag.tqforbooking";

        setInterval(function () { document.getElementById('popupboxtq').style.visibility = "hidden"; }, 3000);
    }


</script>
<div class="container-fluid" style="padding:0px">
    <img src="~/Content/images/hotel-8.jpg" width="100%" height="800px" />
</div>
<div id="popupboxtq">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <center><h1>Thank you! for Booking</h1></center>
    </div>
    <div class="col-sm-2"></div>
</div>





<div class="container">
    <div class="col-sm-6" style="margin:20px; ">

        <h1> My Bookings </h1>

        <h3>Hotel Name : @Html.DisplayFor(modelItem => Model.hotellist.Hotel_Name) </h3>
        <h3>Room Type : @Html.DisplayFor(modelItem => Model.roombookinglist.RoomType)</h3>
        <h3>Check in : @Html.DisplayFor(modelItem => Model.roombookinglist.CheckIn)</h3>
        <h3>Check out: @Html.DisplayFor(modelItem => Model.roombookinglist.CheckOut)</h3>
        <h3>Number of Rooms: @Html.DisplayFor(modelItem => Model.roombookinglist.No_of_Rooms)</h3>
        <h3>Number of Guests: @Html.DisplayFor(modelItem => Model.roombookinglist.No_of_Guests)</h3>

        @using (Html.BeginForm("CancelBooking", "chesterfields", FormMethod.Post, new { }))
        {

            <div style="display:none">@Html.TextBox("roombookingid", @Html.DisplayFor(modelItem => Model.roombookinglist.RoomBookingId), new { })</div>
            <button class="btn" style="background-color:black; color: #D2AC67;font-size:18px" type="submit">Cancel Booking</button>

        }

    </div>
</div>

